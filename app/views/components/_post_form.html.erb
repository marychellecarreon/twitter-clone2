<div class="panel panel-default post-form-panel">
      <div class="panel-body row">

        <div class="col-sm-1">
          <img src="/avatar.png" class="rounded-image" height="25px" width="25px"></img>
        </div>
        <div class="col-sm-11">
        <%= form_for(@newPost) do |f| %>

         <center>
         <div class="field" style="margin-left: 10px">
         <%= f.text_field :body, autofocus: true, class: "form-control" %>
         <span style="float: right"><%= f.submit "Tweet", class: "btn btn-primary" %></span>
     
         </div>
         <center>
         <% end %>
        </div>
      </div>
    </div>

