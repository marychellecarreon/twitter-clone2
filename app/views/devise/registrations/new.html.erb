<div class=".col-xs-12.col-md-4 signup">
<h2>Join Twitter Today.</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>


  <div class="fieldemail">
    <center><%= f.email_field :email, autofocus: true , placeholder: "email"%><center>
  </div>

  <div class="fieldpassword">
    <% if @minimum_password_length %>
    <center><em>(<%= @minimum_password_length %> characters minimum)</em><center>
    <% end %>
    <center><%= f.password_field :password, autocomplete: "off", placeholder: "password"%><center>
  </div>


  <div class="actions">
    <button type="submit" class="btn btn-primary">Sign up</button>
  </div>

<% end %>

<%- if controller_name != 'sessions' %>
  <center><%= link_to "Log in", new_session_path(resource_name) %><center>
<% end -%>
</div>


