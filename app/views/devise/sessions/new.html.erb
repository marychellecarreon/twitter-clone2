<div class=".col-xs-12.col-md-4 login">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="fieldemail">
    <%= f.email_field :email, autofocus: true, placeholder: "email or username" %>
  </div>
  
  <div class="fieldpassword">
    <%= f.password_field :password, autocomplete: "off" , placeholder: "password" %> <%= f.submit "Log in" %>
  </div>

<div class="container remforgot">
  <% if devise_mapping.rememberable? -%>
    <div class="fieldrememberme">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, style: "font-weight: normal;" %> .
      </div> 
  <% end %>

  <%if devise_mapping.recoverable? -%>
    <div class="fieldforgot">
    <%= link_to "Forgot password?", new_password_path(resource_name) %><br />
    </div>
<% end %>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Sign up", new_registration_path(resource_name) %><br />
<% end -%>

</div>

